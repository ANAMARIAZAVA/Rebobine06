<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1523"
    tools:context=".ActivityClasses.MainActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="733dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <!-- Título do App -->


        <TextView
            android:id="@+id/rotuloApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="REBOBINE"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            />


        <!-- Título do App -->

        <!-- Seção Login -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/logopreta" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layerlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#262127"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Texto Login -->
            <TextView
                android:id="@+id/rotutlologin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="LOGIN"
                android:textColor="#FFC107"
                android:textSize="18sp" />

            <!-- Nome -->
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/exmplo"
                android:hint="Digite seu nome"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888" />

            <!-- Senha -->
            <EditText
                android:id="@+id/senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/exmplo"
                android:hint="Senha"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888" />

            <!-- Botão -->
            <Button
                android:id="@+id/btEntrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text="ENTRAR"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:onClick="cadastrar"
                android:text="NOVO FUNCIONARIO"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
